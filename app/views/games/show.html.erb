<h3>Game: <%= @game.name %></h3>

<% if @game.started?%>
  <% if @round.host == current_user %>
    <%= render partial: "dealer", locals: {game: @game, white_cards: @white_cards, round: @round} %>
  <% else %>
    <%= render partial: "player", locals: {game: @game, round: @round} %>
  <% end %>
<% else %>
  <%= render partial: "plan", locals: {game: @game} %>
<% end %>
</br>
